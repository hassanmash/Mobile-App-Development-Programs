<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_marginTop="75dp"
        android:id="@+id/res"
        android:text="Result"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <EditText
        android:layout_marginTop="40dp"
        android:hint="Click the numbers"
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></EditText>
    <LinearLayout
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/b_7"
            android:text="7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:id="@+id/b_8"

            android:text="8"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="9"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_9"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="/"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_div"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="4"
            android:id="@+id/b_4"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="5"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="6"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_6"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="*"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_mul"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="1"
            android:id="@+id/b_1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="2"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="3"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="-"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_sub"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>
    <LinearLayout
        android:gravity="center_horizontal"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="."
            android:id="@+id/b_dot"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="0"
            android:layout_marginLeft="4dp"
            android:id="@+id/b_0"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="="
            android:layout_marginLeft="4dp"
            android:id="@+id/b_eq"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>
        <Button
            android:text="+"
            android:id="@+id/b_add"

            android:layout_marginLeft="4dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>

    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/clear"
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>